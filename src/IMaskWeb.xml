<?xml version="1.0" encoding="utf-8" ?>
<widget id="mendix.imaskweb.IMaskWeb" pluginWidget="true" needsEntityContext="true" offlineCapable="true" supportedPlatform="Web" 
    xmlns="http://www.mendix.com/widget/1.0/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>IMask Web</name>
    <description>The missing masked input for Mendix</description>
    <icon/>
    <properties>
        <propertyGroup caption="General">
            <systemProperty key="Label"/>

            <property key="attribute" type="attribute" required="true">
                <caption>Attribute</caption>
                <description></description>
                <attributeTypes>
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="strMaskPattern" type="string" required="true" multiline="false">
                <caption>Pattern</caption>
                <description>Defaults are '0', 'a', and '*'. Use '[]' to make input optional. Use '{}' to include a fixed region in the unmasked value. Use '`' to prevent symbols shifting back. See https://imask.js.org/guide.html#masked-pattern for more info.</description>
            </property>
            <property key="placeholder" type="textTemplate" required="false" multiline="false">
                <caption>Placeholder Text</caption>
                <description>(Only applies to Lazy Masks)</description>
                <translations>
                    <translation lang="en_US"></translation>
                </translations>
            </property>
            <systemProperty key="Editability"/>
            <systemProperty key="Visibility"/>
        </propertyGroup>
        <propertyGroup caption="Behavior">
            <property key="onAcceptAction" type="action">
                <caption>On Accept</caption>
                <description>Triggered each time an entered character is accepted.</description>
            </property>
            <property key="onCompleteAction" type="action">
                <caption>On Complete</caption>
                <description>Triggered when the full mask is completed. (Note: the final char input will also trigger the On Accept action)</description>
            </property>
            <property key="blnOverwriteMode" type="boolean" defaultValue="false">
                <caption>Overwrite mode?</caption>
                <description>When "true," valid entered characters will replace existing characters, instead of being inserted. </description>
            </property>
            <property key="blnLazy" type="boolean" defaultValue="true">
                <caption>Lazy Mask?</caption>
                <description>If false, placeholder chars will always be visible</description>
            </property>
            <property key="strPlaceholderChar" type="string" required="true" multiline="false" defaultValue="_">
                <caption>Placeholder Char</caption>
                <description>Eg `_` or `*`</description>
            </property>

        </propertyGroup>
        <propertyGroup caption="Advanced">
            <property key="objCustomDefinitions" type="object" isList="true" required="false">
                <caption>Custom Definitions</caption>
                <description>Use these to define custom definitions for any single character</description>
                <properties>
                    <property key="strCharacter" type="string" required="false">
                        <caption>Character</caption>
                        <category>Custom Definition</category>
                        <description>Use this in the `Pattern`</description>
                    </property>
                    <property key="strRegex" type="string" required="false">
                        <caption>Regular Expression</caption>
                        <category>Custom Definition</category>
                        <description>Evaluates as a regular expression against the individual entered character</description>
                    </property>
                </properties>
            </property>
        </propertyGroup>
    </properties>
</widget>
